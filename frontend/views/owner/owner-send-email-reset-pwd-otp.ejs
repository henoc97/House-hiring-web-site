<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <title>Extase-Home - Sign-Log</title>
    <meta
      name="description"
      content="Extase-Home offre des solutions de gestion de logement alliant luxe et confort moderne. Découvrez nos services de gestion immobilière."
    />
    <link rel="shortcut icon" href="/icon/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/icon/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/sign-log-style.css" />
  </head>
  <body>
    <div class="wrapper-form">
      <div class="form-container">
        <div class="form-inner">
          <form id="send-email-form">
            <h3>Entrer l' adresse e-mail du compte</h3>
            <div class="field">
              <input
                type="email"
                id="send-email"
                name="email"
                placeholder="Adresse e-mail"
                required
              />
            </div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" value="Envoyer" />
            </div>
          </form>
        </div>
      </div>
    </div>
    <div id="message"></div>
    <!-- Zone pour afficher le message -->

    <script src="/public/endpoints.js"></script>

    <script src="/owner/owner-sendEmailLogic.js"></script>
  </body>
</html>
