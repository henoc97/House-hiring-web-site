<div class="card">
  <div class="card-header">
    <h2 id="action-indicator">Enregistrer une propriété</h2>
  </div>
  <form id="property-form">
    <div class="form-group">
      <label for="property-address">Adresse:</label>
      <input type="text" id="property-address" name="address" required />
    </div>
    <div class="form-group">
      <label for="property-description">Description:</label>
      <input
        type="text"
        id="property-description"
        name="description"
        required
      />
    </div>
    <div class="form-group">
      <label for="property-cost">Coût:</label>
      <input type="number" id="property-cost" name="cost" required />
    </div>
    <button type="submit">Enregistrer</button>
  </form>
</div>
